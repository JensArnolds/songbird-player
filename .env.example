# File: .env.example
# Source-of-truth schema: apps/web/src/env.js
# Copy this file to .env for local development.

# Local runtime
PORT=3222
HOSTNAME=0.0.0.0
NODE_ENV=development

# NextAuth / OAuth (required)
# Generate a secret: openssl rand -base64 32
# https://next-auth.js.org/configuration/options#secret
AUTH_SECRET="replace-with-a-32+-character-secret"
NEXTAUTH_URL="http://127.0.0.1:3222"
AUTH_TRUST_HOST=true
AUTH_DISCORD_ID="your-discord-app-id"
AUTH_DISCORD_SECRET="your-discord-app-secret"

# Spotify OAuth (optional)
AUTH_SPOTIFY_ENABLED=false
NEXT_PUBLIC_AUTH_SPOTIFY_ENABLED=false
SPOTIFY_CLIENT_ID="your-spotify-client-id"
SPOTIFY_CLIENT_SECRET="your-spotify-client-secret"
# Optional when frontend and auth API are split across domains.
NEXT_PUBLIC_AUTH_API_ORIGIN="https://your-auth-api-domain.com"

# Database (required at runtime)
DATABASE_URL="postgresql://user:password@host-pooler.region.aws.neon.tech/database?sslmode=require"

# Upstream API (required for V2 proxy routes)
API_V2_URL="https://your-api-domain.com"
# Optional override. If unset, SONGBIRD_API_URL falls back to API_V2_URL.
SONGBIRD_API_URL="https://your-songbird-api-domain.com"
# Optional health path override. Defaults to /api/health.
SONGBIRD_API_HEALTH_URI="/api/health"

# Upstream auth key(s) (set at least one; keeping both equal is recommended)
BLUESIX_API_KEY="your-api-key"
UNIVERSAL_KEY="your-api-key"

# OAuth/auth debugging (optional)
# Set true to trace auth flow end-to-end in logs.
AUTH_DEBUG_OAUTH=false
NEXT_PUBLIC_AUTH_DEBUG_OAUTH=false
# Frontend callback/auth diagnostics panel (0|1).
NEXT_PUBLIC_AUTH_DEBUG=0
# Used by /api/auth/spotify/debug route.
AUTH_DEBUG_TOKEN="your-auth-debug-token"

# Optional client/runtime metadata
NEXT_PUBLIC_APP_VERSION="0.0.0"
ELECTRON_BUILD=false
# NEXT_PUBLIC_LOG_LEVEL=DEBUG # DEBUG | INFO | WARN | ERROR
# SKIP_ENV_VALIDATION=false   # Only for controlled test/debug use.

# Legacy compatibility aliases (prefer canonical keys above)
# V2_API_URL="https://your-api-domain.com"
# NEXT_PUBLIC_V2_API_URL="https://your-api-domain.com"
# API_V2_HEALTH_URL="/api/health"
# SONGBIRD_API_KEY="your-api-key" # deprecated alias for UNIVERSAL_KEY
# UNIVERSAL_API_KEY="your-api-key" # deprecated alias for UNIVERSAL_KEY
